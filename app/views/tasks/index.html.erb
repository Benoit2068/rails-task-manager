<h1>My Tasks</h1>

<ol>
<% @tasks.each do |task| %>
<li> <%= task.title %></li>
  <ul>
    <li><%= link_to task.title, task_path(task.id) %></li>
    <li> <%= task.details %></li>
    <li> Completed = <%= task.completed %></li>
  </ul>
  <%= link_to "delete this task", task_path(task.id), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
</ol>

<%= link_to "add task", new_task_path %>
